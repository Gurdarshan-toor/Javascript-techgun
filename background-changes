    <script>
        function changeBG(color){
            document.body.style.backgroundColor = color;
            let txt = document.getElementsByClassName("text_color");
            if(color == "000"){
                for (let elm of txt){
                    elm.style.color = "fff";
                } 
            }
            else{
                for (let elm of txt){
                    elm.style.color = "000";
                }
            }
        }
    </script>
